<!DOCTYPE html>
<html lang="en">
<head>
	<title>Pulser</title>
	<% include ../partials/head %>
	<script>
		page = "index";
	</script>
	<style>
	.btn {
		padding: 16px;
		font-size: 20pt;
		width: auto;
	}
	</style>
</head>
<body>
	<% include ../partials/nav %>
	<div class="container">
		<a href="#" onclick="logout();" class="btn">logout</a>
		<h1>Pulser</h1>
		<a href="/gui/applications">
			<div class="application">
				<div class="app-content">
					<h3 class="app-name">Applications</h3>
				</div>
				<div class="app-cover"></div>
			</div>
		</a>
		<a href="/gui/users">
			<div class="application">
				<div class="app-content">
					<h3 class="app-name">Users</h3>
				</div>
				<div class="app-cover"></div>
			</div>
		</a>
	</div>
	<script>
		function logout() {
			sendRequest("/api/logout", "POST", undefined, function(res, err) {
				if (err) {
					alert(err);
				} else {
					window.location.reload();
				}
			});
		}
	</script>
</body>
</html>
